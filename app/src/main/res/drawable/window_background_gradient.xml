<!-- res/drawable/two_color_split_top_bottom.xml -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="100dp"
    android:height="100dp"
    android:viewportWidth="100"
    android:viewportHeight="100">

    <!-- Top half: Red -->
    <path
        android:fillColor="@color/windowBackground"
        android:pathData="M0,0 L100,0 L100,90 L0,90 Z" />

    <!-- Bottom half: Blue -->
    <path
        android:fillColor="@color/cardColor"
        android:pathData="M0,90 L100,90 L100,100 L0,100 Z" />
</vector>
